#include <iostream> // 1 Задание
#include <vector>

int main() {
    std::vector<int> nums = {6, 9, 1, 2, 5, 2, 1};
    std::vector<int> uniqueElements; 

    for (int num : nums) {
        bool Dublicate = false; 

        for (int uniqueNum : uniqueElements) {
            if (num == uniqueNum) {
                Dublicate = true; 
                break; 
            }
        }

        if (!Dublicate) {
            uniqueElements.push_back(num);
        }
    }

    std::cout << "Уникальные элементы: ";
    for (int uniqueNum : uniqueElements) {
        std::cout << uniqueNum << " "; 
    }
    std::cout << std::endl; 

    return 0; 
}

#include <iostream> //2 
#include <vector>

using namespace std;

int main() {
    int arr1[] = {9, 4, 7};
    int arr2[] = {4, 8, 2};

    int size1 = sizeof(arr1) / sizeof(arr1[0]);
    int size2 = sizeof(arr2) / sizeof(arr2[0]);

    vector<int> mergedArray;

    for (int i = 0; i < size1; i++) {
        mergedArray.push_back(arr1[i]);
    }

    for (int j = 0; j < size2; j++) {
        mergedArray.push_back(arr2[j]);
    }

    for (int i = 0; i < mergedArray.size(); i++) {
        for (int j = 0; j < mergedArray.size() - 1; j++) {
            if (mergedArray[j] > mergedArray[j + 1]) {
                int temp = mergedArray[j];
                mergedArray[j] = mergedArray[j + 1];
                mergedArray[j + 1] = temp;
            }
        }
    }

    cout << "Объединенный и отсортированный массив: {";
    for (int k = 0; k < mergedArray.size(); k++) {
        cout << mergedArray[k];
        if (k < mergedArray.size() - 1) {
            cout << ", ";
        }
    }
    cout << "}" << endl;

    return 0;
}

#include <iostream> //3 
#include <vector>

using namespace std;

int main() {
    vector<int> arr = {-2, 1, -3, 4, -1, 2, 1, -5, 4};

    int maxSum = arr[0]; 
    int currentSum = arr[0]; 

    for (int i = 1; i < arr.size(); i++) {
        if (currentSum < 0) {
            currentSum = arr[i];
        } else {
            currentSum += arr[i]; 
        }

        if (currentSum > maxSum) {
            maxSum = currentSum;
        }
    }

    cout << "Максимальная сумма непрерывного подмассива: " << maxSum << endl;

    return 0;
}

#include <iostream> //4
#include <vector>

using namespace std;

int main() {
    vector<int> arr = {3, 1, 2, 4, 7, 6, 5, 8};

    vector<int> evenNumbers;
    vector<int> oddNumbers;

    for (int i = 0; i < arr.size(); i++) {
        if (arr[i] % 2 == 0) {
            evenNumbers.push_back(arr[i]); 
        } else {
            oddNumbers.push_back(arr[i]); 
        }
    }

    evenNumbers.insert(evenNumbers.end(), oddNumbers.begin(), oddNumbers.end());

    cout << "Массив после перестановки: {";
    for (int i = 0; i < evenNumbers.size(); i++) {
        cout << evenNumbers[i];
        if (i < evenNumbers.size() - 1) {
            cout << ", ";
        }
    }
    cout << "}" << endl;

    return 0;
}
